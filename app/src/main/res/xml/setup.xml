<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
            android:title="@string/setup_title"
            android:key="setupCategory"
            android:persistent="false" >

        <EditTextPreference
            android:id="@+id/setupName"
            android:title="@string/setup_name"
            android:summary="@string/setup_name_description"
            android:defaultValue=""
            android:key="setupName"
            android:persistent="false"
            android:inputType="text" />

        <EditTextPreference
            android:id="@+id/setupUrl"
            android:title="@string/setup_url"
            android:summary="@string/setup_url_description"
            android:defaultValue="https://example.com/trigger/"
            android:key="setupUrl"
            android:persistent="false"
            android:inputType="textUri" />

        <EditTextPreference
            android:id="@+id/setupToken"
            android:title="@string/setup_token"
            android:summary="@string/setup_token_description"
            android:defaultValue=""
            android:key="setupToken"
            android:persistent="false"
            android:inputType="textVisiblePassword" />

        <EditTextPreference
            android:id="@+id/setupSSIDs"
            android:title="@string/setup_ssids"
            android:summary="@string/setup_ssids_description"
            android:defaultValue=""
            android:key="setupSSIDs"
            android:persistent="false"
            android:inputType="text" />

        <CheckBoxPreference
            android:id="@+id/setupIgnore"
            android:title="@string/setup_ignore"
            android:summary="@string/setup_ignore_description"
            android:defaultValue="false"
            android:persistent="false"
            android:key="setupIgnore" />
    </PreferenceCategory>

</PreferenceScreen>
